<% @page_title = 'Admin Login' %>

<div class='login'>
  <%= form_tag(home_attempt_login_path, {:method => :post, :class => 'form-signin'}) do %>
    <%= label_tag(:username, nil, class: 'sr-only') %>
    <%= text_field_tag(:username, params[:username], class: 'form-control', placeholder: 'username') %>
    <%= label_tag(:password, nil, class: 'sr-only') %>
    <%= password_field_tag(:password, nil, class: 'form-control', placeholder: 'password') %>

    <%= submit_tag('Log In', class: 'btn btn-lg btn-primary btn-block') %>
  <% end %>
</div>
