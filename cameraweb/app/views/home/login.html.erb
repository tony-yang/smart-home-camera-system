<% @page_title = 'Admin Login' %>

<div class='login'>
  <%= form_tag(home_attempt_login_path, :method => :post) do %>
    <%= label_tag(:username) %>
    <%= text_field_tag(:username, params[:username]) %>
    <%= label_tag(:password) %>
    <%= password_field_tag(:password) %>

    <%= submit_tag('Log In') %>
  <% end %>
</div>
