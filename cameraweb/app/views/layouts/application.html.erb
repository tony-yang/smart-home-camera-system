<!DOCTYPE html>
<html>
  <head>
    <title>Cameraweb: <%= @page_title || 'Home' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id='header'>
      <h1>Smart Home Camera System</h1>
      <% if !@username.blank? %>
      <div class='control'>
        <span class='identity'>Logged in as: <%= @username %></span>
        <span class='logout'><%= link_to('Logout', home_logout_path) %></span>
      </div>
      <% end %>
    </div>
    <div id='main'>
      <% if !flash[:notice].blank? %>
      <div class='notice'>
        <%= flash[:notice] %>
      </div>
      <% end %>

      <div id='content'>
      <%= yield %>
      </div>

    </div>
  </body>
</html>
